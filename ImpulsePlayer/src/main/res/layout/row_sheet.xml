<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?attr/selectableItemBackground"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingTop="8dp"
    android:paddingBottom="8dp">

    <ImageView
        android:id="@+id/icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/shape_corner_16"
        android:backgroundTint="@color/control_accent"
        android:padding="8dp"
        android:src="@drawable/ic_cast_tv"
        app:tint="@color/control_accent"
        tools:backgroundTint="#4D4945FF" />

    <TextView
        android:id="@+id/title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:textColor="@color/sheet_foreground"
        tools:text="@string/quality_automatic" />

    <ImageView
        android:id="@+id/indicator"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/ic_radio_default"
        tools:src="@drawable/ic_radio_active" />
</LinearLayout>